<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Settings_Screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        style="@style/Settings_Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back_button"
            style="@style/Icon_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:stateListAnimator="@null"
            app:icon="@drawable/vector4"
            app:iconGravity="textStart" />

        <TextView
            style="@style/HeadWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings" />
    </LinearLayout>

    <Switch
        android:id="@+id/switcher"
        style="@style/Switch_theme"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:text="@string/night_theme" />

    <Button
        android:id="@+id/button"
        style="@style/Icon_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="@string/share_app"
        app:icon="@drawable/vector5" />

    <Button
        android:id="@+id/button3"
        style="@style/Icon_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="@string/write"
        app:icon="@drawable/vector6" />

    <Button
        android:id="@+id/button5"
        style="@style/Icon_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="@string/user_agreement"
        app:icon="@drawable/vector7" />
</LinearLayout>
