<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Settings_Screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <LinearLayout
        style="@style/Settings_Screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/return_button"
            style="@style/Icon_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:stateListAnimator="@null"
            app:icon="@drawable/return_icon"
            app:iconGravity="textStart" />

        <TextView
            style="@style/HeadWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings" />
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switcher"
        style="@style/Switch_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/night_theme" />

    <Button
        android:id="@+id/share_button"
        style="@style/Icon_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="@string/share_app"
        app:icon="@drawable/share_icon" />

    <Button
        android:id="@+id/support_button"
        style="@style/Icon_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="@string/write"
        app:icon="@drawable/support_icon" />

    <Button
        android:id="@+id/agreement_button"
        style="@style/Icon_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="@string/user_agreement"
        app:icon="@drawable/next_icon" />
</LinearLayout>
