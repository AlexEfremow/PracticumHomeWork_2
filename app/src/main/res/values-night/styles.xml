<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button_Style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="Text_Style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Icon_Button">
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="settings_item_theme">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingVertical">21dp</item>
    </style>
    <style name="icon_style">
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="HeadWord">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>
    <style name="input_layout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Media_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="track_name_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="track_info_style">
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="search_next_button">
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="search_point_style">
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="delete_button_style">
        <item name="android:tint">#000000</item>
    </style>
</resources>