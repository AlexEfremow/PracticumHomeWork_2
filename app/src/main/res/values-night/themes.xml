<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PracticumHomeWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Screen">
        <item name="android:background">#000000</item>
    </style>

    <style name="Settings_Screen">
        <item name="android:background">#000000</item>
    </style>

    <style name="Text_Style">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">#272727</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Icon_Button">
        <item name="iconTint">#FFFFFF</item>
        <item name="android:backgroundTint">#000000</item>
    </style>
    <style name="Switch_theme">
        <item name="backgroundColor">#272727</item>
        <item name="android:paddingStart">15dp</item>item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Icon_theme">
        <item name="android:backgroundTint">#272727</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">#939393</item>
        <item name="iconTintMode">src_in</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">@string/write</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="HeadWord">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>
    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="endIconTint">@color/black</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="Media_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>