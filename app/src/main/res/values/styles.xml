<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_screen_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/black_2</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black_2</item>
    </style>
    <style name="main_screen_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="back_button">
        <item name="android:tint">@color/black_2</item>
    </style>
    <style name="settings_button_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingVertical">21dp</item>
    </style>
    <style name="settings_item_icon_style">
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="toolbar_text_style">
        <item name="android:textColor">@color/black_2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="input_layout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:backgroundTint">@color/white_2</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">25</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_2</item>
    </style>
    <style name="track_name_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="track_info_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="track_details_button">
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="track_info_point">
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="clear_button_style">
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="no_results_stub_style">
        <item name="android:src">@drawable/no_results_stub</item>
    </style>
    <style name="no_connection_stub_style">
        <item name="android:src">@drawable/lost_connection_stub</item>
    </style>
    <style name="stubs_text_style">
        <item name="android:textColor">@color/black_2</item>
    </style>
    <style name="refresh_button_style">
        <item name="android:backgroundTint">@color/black_2</item>
    </style>
    <style name="history_textView">
        <item name="android:textColor">@color/black_2</item>
    </style>
    <style name="track_name_style_player">
        <item name="android:textColor">@color/black_2</item>
    </style>
    <style name="tab_style" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tab_layout_style">
        <item name="tabTextColor">@color/black_2</item>

    </style>

</resources>